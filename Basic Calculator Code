#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
int main()
{
	int a,b,c,ch;
	printf("A SIMPLE CALCULATOR BY ANSHIMA SHARMA\n");
	do
	{ 
	printf("\n enter 1 for addition");
	printf("\n enter 2 for subtraction");
	printf("\n enter 3 for multiplication");
	printf("\n enter 4 for division");
	printf("\n enter 5 for exit");
	printf("\n enter your choice=");
	scanf("%d",&ch);
	switch(ch)
	{
		case 1 : 
                printf("\n enter any two numbers=");	
				scanf("%d%d",&a,&b);	
				c=a+b;
				printf("\n sum=%d",c);
				break;
		case 2 :
			    printf("\n enter any two numbers=");
				scanf("%d%d",&a,&b);
				c=a-b;
				printf("\n subtraction=%d",c);
				break;
		case 3 :
				printf("\n enter any two number=");
				scanf("%d%d",&a,&b);
				c=a*b;
				printf("\n multiplication=%d",c);
				break;	
		case 4 :
				printf("\n enter any two numbers=");
				scanf("%d%d",&a,&b);
				c=a/b;
				printf("\n division=%d",c);
				break;
		case 5 :
				exit(0);
		default : 
				printf("\n enter wrong choice");
	}
} while(1);
getch();
}
