#include<stdio.h>
#include<conio.h>
int main()               //write a program to find largest and smallest number among 7 numbers!!!!!!!!!
{
	int ar[7],i,max,min;
	printf("enter any 7 numbers=\n");
	//code to enter elements among which max min would be find out
	for(i=0;i<7;i++)
	{
		scanf("%d",&ar[i]);
	}
	max=ar[0];
	min=ar[0];
	for(i=0;i<7;i++)
	{
		if(ar[i]>max)
		{
			max=ar[i];
		}
		if(ar[i]<min)
		{
			min=ar[i];
		}
	}
	printf("%d is maximum number=\n",max);
	printf("%d is minimum number=\n",min);
	return 0;
}
